<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
		.important {
			font-weight: bold;
		}

		.contacts-ListMenu {
			background-color: #D0E4F6;
			padding-bottom: 6px;
		}

		.contacts-ListContainer {
			padding-right: 50px;
		}
    </ui:style>
    <g:VerticalPanel width="100%"  verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
        <g:DecoratorPanel width="20%">
            <g:VerticalPanel ui:field="vPanel" width="100%">
                <g:HTMLPanel styleName="{style.contacts-ListContainer} {style.contacts-ListMenu}" >
                    <div align="center">
                        <g:Label styleName="{style.important}">Login Details</g:Label>
                    </div>
                    <div align="center">
                        <table>
                            <tr>
                                <td>
                                    <g:Label>Username:</g:Label>
                                </td>
                                <td>
                                    <g:TextBox  ui:field="txtUserName"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <g:Label>Password:</g:Label>
                                </td>
                                <td>
                                    <g:PasswordTextBox ui:field="txtPassword"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div align="center">
                        <g:Button ui:field="btnLogin">Login</g:Button>
                    </div>
                </g:HTMLPanel>
            </g:VerticalPanel>
        </g:DecoratorPanel>
    </g:VerticalPanel>
</ui:UiBinder> 